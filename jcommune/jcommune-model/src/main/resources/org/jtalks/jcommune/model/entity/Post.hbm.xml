<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.jcommune.model.entity">
  <class name="Post" table="POST">
    <id column="POST_ID" name="id" unsaved-value="0">
      <generator class="native"/>
    </id>
    <many-to-one name="userCreated" class="User" column="USER_CREATED" fetch="join"
                 foreign-key="FK_USER" lazy="false" not-null="true"/>
    <property name="creationDate" type="org.joda.time.contrib.hibernate.PersistentDateTime"
              column="POST_DATE" not-null="true"/>
    <property name="postContent" column="POST_CONTENT" not-null="true"/>
  </class>
</hibernate-mapping>
